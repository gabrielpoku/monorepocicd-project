{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/backend",
    "module": "nodenext",
    "types": [
      "node"
    ],
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "tsBuildInfoFile": "out-tsc/backend/tsconfig.app.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
